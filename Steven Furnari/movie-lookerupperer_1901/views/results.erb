<nav>
    <a href="/search">Search Agian?</a>
</nav>

<hr>

<h3><%=@result['total_results']%> Results for "<%=params[:title]%>"</h3>

<p><strong>Showing the first 20 results:</strong></p>


<% @result['results'].each do |movie|%>
<ul style="list-style: none;">
    <li>
        <div class="container">
            <h3><%=movie['title']%> (<%= movie['release_date'][0..3] %>)</h3>
            <div class="image">
                <img src="https://www.themoviedb.org/t/p/w300_and_h450_bestv2<%=movie['poster_path']%>" width="150" height="300">
            </div>
            <div class="overview">
                <h4>Overview</h4>
                <p>
                    <%= movie['overview'] %>
                </p>
            </div>
        </div>
        <hr>
        <br>
    </li>
</ul>
<% end %>
