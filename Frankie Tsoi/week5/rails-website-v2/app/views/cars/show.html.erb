
<%= link_to 'Edit', edit_car_path(@car.id) %>
<%= link_to 'Delete', car_path(@car.id), method:'delete'%>

<h2><%= @car.name%></h2>

<p>
  <strong>Body Type:</strong>: 
  <%= @car.body_type %>
</p>

<p>
  <strong>Model:</strong> 
  <%= @car.model %>
</p>

<p>
  <strong>Price:</strong> 
  <%= @car.price %>
</p>


<% if @car.image.present? %> 
<%= image_tag @car.image, alt: @car.name, class: 'cars_image'%>
<%end%>