<h2><%= @author.name %></h2>
<%= link_to 'Edit', edit_author_path(@author.id) %>
<%= link_to 'Delete', author_path(@author.id), method: 'delete' %>
<br>

<% if @author.image.present? %>
    <%= image_tag @author.image, alt: @author.name, class: 'poster_image' %>    
<% end %>

<p>
    <strong>Date Of Birth</strong>:
    <%= @author.dob %>
</p>

<p>
    <strong>Nationality</strong>:
    <%= @author.nationality %>
</p>

<p>
    <strong>Movement</strong>:
    <%= @author.movement %>
</p>

<hr>
<% @author.books.each do |b| %>
    <li>
        <%= link_to book_path(b) do%>
            <% if b.image.present? %>
                <%= image_tag(b.image, class: "icon") %>
                <br>
                
            <% end %>
                
            <%= b.name %>
        <% end %>
    </li>
<% end %>


