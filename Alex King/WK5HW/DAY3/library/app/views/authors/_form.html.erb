
<%= form_with model: @author, local:true do |f| %>

    <%= f.label :name %>
    <br>
    <%= f.text_field :name %>
    <br><br>

    <%= f.label :dob %>
    <br>
    <%= f.date_field :dob %>
    <br><br>

    <%= f.label :image, "URL" %>
    <br>
    <%= f.text_field :image %>
    <br><br>

    <%= f.label :bio %>
    <br>
    <%= f.text_area :bio %>
    <br><br>

    <%= f.submit %>

    <% end %>