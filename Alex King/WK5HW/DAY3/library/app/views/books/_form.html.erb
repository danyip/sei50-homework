
<%= form_with model: @book, local:true do |f| %>

    <%= f.label :title %>
    <br>
    <%= f.text_field :title %>
    <br><br>

    <%= f.label :publish_date %>
    <br>
    <%= f.text_field :publish_date %>
    <br><br>
    <%= f.label :genre %>
    <br>
    <%= f.text_field :genre %>
    <br><br>

    <%= f.label :image, "URL" %>
    <br>
    <%= f.text_field :image %>
    <br><br>

    <%= f.label :bio %>
    <br>
    <%= f.text_area :bio %>
    <br><br>

     <%= f.label :author_id %>
    <br>
    <%= f.collection_select :author_id, Author.all, :id, :name, include_blank: true%>

    <%= f.submit %>

    <% end %>