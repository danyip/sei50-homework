
<h2>

<em>
    <%= @work.title %>,
</em>
    <%= @work.year %>
</h2>
<%= link_to 'Edit', edit_work_path(@work) %>
<%= link_to 'Delete', work_path(@work), method: 'delete' %>

<h3><strong>
<%= link_to @work.artist.name, artist_path(@work.artist) %>
    (b. <%= @work.artist.dob.year %>)</strong></h3>


<p>
    <strong>Medium:</strong>
    <%= @work.medium %>
</p>

<p>
    <strong>style:</strong>
    <%= @work.style %>
</p>


    <%= image_tag @work.image, alt: @work.title, class:'artwork'%>