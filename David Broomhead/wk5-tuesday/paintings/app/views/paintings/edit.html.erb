<h2>Edit Painting: <%= @painting.name %></h2>

<!-- NOT VERY DRY to copy-paste this entire identical form from new.html.erb, tomorrow we'll use 'render' -->
<%= form_with model: @painting, local: true do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <br>

  <%= f.label :artist %>
  <%= f.text_field :artist %>
  <br>

  <%= f.label :price %>
  <%= f.text_field :price %>
  <br>

  <%= f.label :year %>
  <%= f.text_field :year %>
  <br>

  <%= f.label :url, 'Image URL' %>
  <%= f.text_field :url %>
  <br>

  <%= f.submit %>
<% end %>