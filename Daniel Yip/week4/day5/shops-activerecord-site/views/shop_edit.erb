<h3>Update <%= @shop.name %></h3>

<form action="/shops/<%= @shop.id %>" method="post">

<label for="name">Name:</label>
<input type="text" name="name" value="<%= @shop.name %>">

<label for="address">Address:</label>
<input type="text" name="address" value="<%= @shop.address %>">

<label for="opening_time">Opening Time:</label>
<input type="time" name="opening_time" value="<%= @shop.opening_time.strftime("%H:%M")  %>">

<label for="closing_time">Closing Time:</label>
<input type="time" name="closing_time" value="<%= @shop.closing_time.strftime("%H:%M")  %>">

<label for="open_weekdays">Open on weekdays:</label>
<input type="checkbox" name="open_weekdays" <%= @shop.open_weekdays ? 'checked' : '' %>>

<label for="open_weekends">Open on weekends:</label>
<input type="checkbox" name="open_weekends" <%= @shop.open_weekends ? 'checked' : '' %>>

<label for="rating">Rating:</label>
<input type="number" name="rating" min="1" max="10" value="<%= @shop.rating %>">

<label for="image_url">Image URL:</label>
<input type="text" name="image_url" value="<%= @shop.image_url %>">

<label for="description">Description:</label>
<textarea name="description" cols="30" rows="10"><%= @shop.description %></textarea >

<button class="update-button">Update</button>

</form>

