<h3>Create a new shop</h3>

<form action="/shops" method="post">

<label for="name">Name:</label>
<input type="text" name="name">

<label for="address">Address:</label>
<input type="text" name="address">

<label for="opening_time">Opening Time:</label>
<input type="time" name="opening_time">

<label for="closing_time">Closing Time:</label>
<input type="time" name="closing_time">

<label for="open_weekdays">Open on weekdays:</label>
<input type="checkbox" name="open_weekdays">

<label for="open_weekends">Open on weekends:</label>
<input type="checkbox" name="open_weekends">

<label for="rating">Rating:</label>
<input type="number" name="rating" min="1" max="10">

<label for="image_url">Image URL:</label>
<input type="text" name="image_url">

<label for="description">Description:</label>
<textarea name="description" cols="30" rows="10"></textarea >

<button class="update-button">Update</button>

</form>