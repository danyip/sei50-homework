<h2>Drama details: <%= @drama_info['name'] %>
</h2>

<a href="/dramas/<%= @drama_info['id'] %>/edit"><button>Edit</button></a>
<a href="/dramas/<%= @drama_info['id'] %>/delete"><button>Delete</button></a>


<div class="info_box"> 
    <img src="<%= @drama_info['poster_url'] %>" class="poster_image">

    <span class="details">
        <p>
            <strong>Genre: </strong><%= @drama_info['genre'] %>
        </p>
        <br>

        <p>
            <strong>Original Language: </strong><%= @drama_info['original_language'] %>
        </p>
        <br>

        <p>
            <strong>Status: </strong><%= @drama_info['status'] %>
        </p>
        <br>

        <p>
            <strong>Rating: </strong><%= @drama_info['rating'] %>
        </p>
        <br>

        <p>
            <strong>Description: </strong><%= @drama_info['description'] %>
        </p>
        <br>
    </span>
</div>




